---
import { Icon } from "astro-icon";
---

<header>
    <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
    </nav>
</header>

<style>
    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 1em;
    }

    header nav a {
        font-weight: bold;
        font-size: 1.17em;
    }

    header nav a:not(:last-child) {
        margin-right: 1em;
    }

    header .links {
        display: flex;
        gap: .5em;
    }

    @media screen and (max-width: 50rem) {
        header {
            margin-top: 0;
        }
    }
</style>
