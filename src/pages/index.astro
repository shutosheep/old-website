---
import BaseLayout from "@layouts/BaseLayout.astro";
import profile from "@images/profile.webp";
import Repo from "@components/Repo.astro";

type pinnedRepos = {
    owner: string;
    repo: string;
    link: string;
    description: string;
    image: string;
    language: string;
    languageColor: string;
    stars: number;
    forks: number;
};

const pinnedRepos = await fetch(
    "https://gh-pinned-repos.egoist.dev/?username=shutosheep"
).then(async (response) => {
    return response.json();
});
---

<BaseLayout>
    <div class="intro">
        <div>
            <h1>Hi I'm Shuto ðŸ‘‹</h1>
            <p>
                I'm a random 19 years old Japanese guy who loves computers and
                software.
            </p>
            <p>
                I am currently studying in the university, busy with assignments
                and exams. In my free time I like to write some code, listen to
                music.
            </p>
        </div>
        <div>
            <img
                class="profile"
                src={profile}
                width="250px"
                height="250px"
                alt="Profile picture of me"
            />
        </div>
    </div>
    <h2>My Github repos</h2>
    <section class="repos">
        {
            pinnedRepos.map((repo) => {
                return (
                    <Repo
                        repo={repo.repo}
                        link={repo.link}
                        description={repo.description}
                        language={repo.language}
                        stars={repo.stars}
                    />
                );
            })
        }
    </section>
</BaseLayout>

<style>
    .intro {
        display: flex;
    }

    .intro div:last-child {
        margin-top: 1.5em;
        margin-left: 1em;
    }

    .intro div:last-child img {
        border-radius: 50%;
    }

    .repos {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    @media (max-width: 48rem) {
        .intro {
            margin-top: 1em;
            flex-direction: column-reverse;
            text-align: center;
        }

        .intro div:last-child {
            margin-top: 0;
            margin-left: 0;
        }

        .repos {
            grid-template-columns: repeat(1, 1fr);
        }
    }
</style>
